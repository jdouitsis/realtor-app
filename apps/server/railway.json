{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "/apps/server/nixpacks.toml"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm --filter @app/server db:migrate && pnpm --filter @app/server start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
